    <Grid Background="#202020">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*" MinHeight="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Style="{StaticResource ResourceKey=GrayStretch}">
            <StackPanel Style="{StaticResource ResourceKey=GrayStretch}" Orientation="Horizontal">
                <Image Style="{StaticResource ResourceKey=GrayStretch}" Source="Pictures\icon_pinc_2.png" Margin="2"/>
                <Menu Style="{StaticResource ResourceKey=GrayStretch}" VerticalAlignment="Center">
                    <MenuItem Header="Файл" DataContext="{Binding ElementName=renderControl, Path=ViewModel}">
                        <MenuItem Header="Новый Ctrl+N" Command="{Binding CreateDocumentCommand}"/>
                        <MenuItem Header="Открыть Ctrl+O" Command="{Binding OpenDocumentCommand}"/>
                        <MenuItem Header="Сохранить Ctrl+S" Command="{Binding SaveCurrentDocumentCommand}"/>
                        <MenuItem Header="Сохранить как... Shift+Ctr+S" Command="{Binding SaveAsCurrentDocumentCommand}"/>
                        <MenuItem Header="Экспорт в... Ctrl+E">
                            <MenuItem Header="SVG"/>
                            <MenuItem Header="HTML"/>
                            <MenuItem Header="PDF"/>
                            <MenuItem Header="PNG"/>
                            <MenuItem Header="JPG"/>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Редактирование">
                        <MenuItem Header="Отменить Ctrl+Z"/>
                        <MenuItem Header="Повторить Shift+Ctrl+Z"/>
                        <MenuItem Header="Вырезать Ctr+X"/>
                        <MenuItem Header="Копировать Ctr+C"/>
                        <MenuItem Header="Вставить Ctr+V"/>
                        <MenuItem Header="Настройки"/>
                    </MenuItem>
                    <MenuItem Header="Объект">
                        <MenuItem Header="Перемещение..."/>
                        <MenuItem Header="Поворот..."/>
                        <MenuItem Header="Зеркальное отражение..."/>
                        <MenuItem Header="Наклон..."/>
                    </MenuItem>
                    <MenuItem Header="Выделение">
                        <MenuItem Header="Все"/>
                        <MenuItem Header="Отменить выделение"/>
                        <MenuItem Header="Выделить снова"/>
                        <MenuItem Header="Инверсия"/>
                    </MenuItem>
                    <MenuItem Header="Справка">
                        <MenuItem Header="Справка программы ItCanDraw F1" Click="MenuItem_Click_FAQ"/>
                        <MenuItem Header="Руководство по ItCanDraw" Click="MenuItem_Click_FAQ2"/>
                        <MenuItem Header="Информация о разработчиках" Click="MenuItem_Click_Autors"/>
                        <MenuItem Header="Выйти..."/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="5*" MinWidth="100"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="2" Width="3" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="{StaticResource BorderBrush}"/>
            <StackPanel Orientation="Vertical" Margin="3">
                <Image Source="Pictures\i_выделения_НеАктивная.png" Margin="0,0,0,3"/>
                <Image Source="Pictures\ii_квадрат.png" Margin="0,0,0,3"/>
                <Image Source="Pictures\ii_треугольник.png" Margin="0,0,0,3"/>
