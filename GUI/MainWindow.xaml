            <MenuItem Header="Редактирование"  Width="101" Foreground="#FCAEF6" >
                <MenuItem Header="Отменить Ctrl+Z" Background ="#2C2C2C" ></MenuItem>
                <MenuItem Header="Повторить Shift+Ctrl+Z" Background ="#2C2C2C" ></MenuItem>
                <MenuItem Header="Вырезать Ctr+X" Background ="#2C2C2C" ></MenuItem>
                <MenuItem Header="Копировать Ctr+C" Background ="#2C2C2C" ></MenuItem>
