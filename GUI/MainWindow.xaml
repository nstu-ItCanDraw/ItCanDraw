                <MenuItem Header="Отменить выделение" Background ="#2C2C2C" ></MenuItem>
                <MenuItem Header="Выделить снова" Background ="#2C2C2C" ></MenuItem>
                <MenuItem Header="Инверсия" Background ="#2C2C2C" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка" Width="59" Foreground="#FCAEF6" >
