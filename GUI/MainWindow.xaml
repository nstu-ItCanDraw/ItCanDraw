            <MenuItem  Height="39" Width="39" ></MenuItem>
            <MenuItem  Height="39" Width="39" ></MenuItem>
            <MenuItem  Height="39" Width="39" ></MenuItem>
            <MenuItem  Height="39" Width="39" ></MenuItem>
        </Menu>

        <Menu Height="1080" Width="39" HorizontalAlignment="Right" Background ="#2C2C2C"></Menu>

        <Menu Height="39" Width="1920" VerticalAlignment="Bottom" Background ="#2C2C2C"></Menu>

        <Menu Height="39" VerticalAlignment="Top" Background ="#2C2C2C" Margin="39,0,-0.4,0">

            <MenuItem Header="Файл" Foreground="#FCAEF6" Height="39" Width="39" >
                <MenuItem Header="Новый Ctrl+N" Background ="#2C2C2C" ></MenuItem>
